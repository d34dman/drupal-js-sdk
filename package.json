    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.0",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "commitlint-plugin-workspace-scopes": "^1.1.0",
    "husky": "^7.0.4",
    "rimraf": "^3.0.2",
    "siroc": "^0.16.0"
  },
  "packageManager": "yarn@3.2.0"
}
