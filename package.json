{
  "name": "@drupal-js-sdk/monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm clean && tsc",
    "changeset": "changeset",
    "clean": "pnpm clean:dist && pnpm clean:test && pnpm clean:docs",
    "clean:dist": "rimraf packages/*/dist || true",
    "clean:test": "rimraf packages/*/coverage || true",
    "clean:docs": "rimraf packages/*/api || true",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "lint:packages": "pnpm -r --parallel run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:packages": "pnpm -r --parallel run format",
    "lint:format": "pnpm format && pnpm lint",
    "lint:format:fix": "pnpm format && pnpm lint:fix",
    "lint:commit": "commitlint",
    "postinstall": "husky install",
    "preinstall": "npx only-allow pnpm",
    "test": "pnpm build && pnpm workspaces foreach run test",
    "version": "changeset version",
    "dev:demo:svelte": "pnpm --filter @drupal-js-sdk/demo-svelte dev",
    "build:demo:svelte": "pnpm --filter @drupal-js-sdk/demo-svelte build",
    "preview:demo:svelte": "pnpm --filter @drupal-js-sdk/demo-svelte preview"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.6",
    "@codecov/rollup-plugin": "^1.9.1",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "commitlint-plugin-workspace-scopes": "^1.1.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^3.29.4"
  },
  "packageManager": "pnpm@10.5.1",
  "version": "0.0.1"
}
