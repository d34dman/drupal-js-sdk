    "cross-env": "^7.0.3",
    "esbuild": "^0.16.11",
    "eslint": "^8.30.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "rollup": "^3.8.1",
    "rollup-plugin-dts": "^5.1.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.23",
